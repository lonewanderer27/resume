---
import type { Experience } from "../types";

const { experience } = Astro.props as { experience: Experience[] };
---

{experience && (
  <section class="experience">
    <h2 class="title">Experience</h2>

    {experience.map((exp) => (
      <div class="experience-item">
        <div class="role">
          {exp.role}
        </div>

        <div class="company">
          {exp.company}
          {exp.freelance && <span>(Freelance)</span>}
          {/* Display startDate only if it exists */}
          <span class="time">{exp.startDate ? `${exp.startDate} - ` : ""} {exp.endDate}</span>
        </div>

        <ul class="details">
          {exp.details.map((detail) => (
            <li>{detail}</li>
          ))}
        </ul>

        <p class="technologies">
          Technologies Used: {exp.technologies.join(", ")}
        </p>

        {/* {exp.references && exp.references.length > 0 && (
          <p class="references">
            References: 
            {exp.references.map((ref) => (
              <>{ref.name} ({ref.role}): {ref.contactNo}</>
            ))}
          </p>
        )} */}
      </div>
    ))}
  </section>
)}

<style lang="scss">
.experience {
    .title {
        @include header;
    }
    .experience-item {
        .role {
            @include sub-header;
        }
        .company {
            @include body-text;
            font-weight: bold;
            .sister_company {
                color: var(--fg-color-title-sm);
            }
            .time {
                float: right;
                color: var(--fg-color-title-sm);
                font-weight: 100;
            }
        }
        .details {
            @include body-text;
            padding: 0 0 0 15px;
            margin-top: 0;
            li {
                margin-top: 0;
                margin-bottom: 0;
            }
        }
        .technologies {
            @include body-text;
        }
        // .references {
        //     @include body-text;
        // }
    }
}

@media (max-width: 768px) {
    @media not print {
        .experience-item .company .time {
            float: none !important;
            display: block !important;
        }
    }
}
</style>
